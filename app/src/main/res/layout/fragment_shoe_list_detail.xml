<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_shoe"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@drawable/classic_shoe_img"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/scr_shoe_list_detail_img_description" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_shoe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:text="Shoe Name" />

            <TextView
                android:id="@+id/txt_shoe_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorPrimary"
                tools:text="Shoe Description" />
        </LinearLayout>


    </LinearLayout>
</layout>